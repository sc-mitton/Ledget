{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "event",
            "type": "pickString",
            "description": "Event",
            "default": "allow-anonymous",
            "options": [
                "allow-anonymous",
                "deny-anonymous",
                "allow-with-auth"
            ],
        }
    ],
    "tasks": [
        {
            "label": "oathkeeper-tests-setup",
            "type": "shell",
            "command": "bash",
            "options": {
                "cwd": "${workspaceFolder}/oathkeeper"
            },
            "args": [
                "tests_setup.sh",
                "${input:event}"
            ],
            "problemMatcher": []
        },
        {
            "label": "lambda-rpc-event",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/oathkeeper"
            },
            "command": "awslambdarpc -e event.json",
            "problemMatcher": []
        },
        {
            "label": "oathkeeper-tests-cleanup",
            "type": "shell",
            "command": "bash",
            "options": {
                "cwd": "${workspaceFolder}/oathkeeper"
            },
            "args": [
                "tests_cleanup.sh"
            ],
            "problemMatcher": []
        }
    ]
}
