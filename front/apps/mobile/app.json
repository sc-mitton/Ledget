
{
  "expo": {
    "name": "Ledget",
    "jsEngine": "hermes",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "androidStatusBar": {
      "translucent": true
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#4149b0"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.ledget.mobile",
      "splash": {
        "image": "./assets/splash-ios-light.png",
        "resizeMode": "contain",
        "dark": {
          "image": "./assets/splash-ios-dark.png",
          "backgroundColor": "#111113"
        }
      },
      "config": {
        "useNonExempEncryption": false
      },
      "icon": {
        "light": "./assets/icon-dark.png",
        "dark": "./assets/icon-dark.png",
        "tinted": "./assets/icon-tinted.png"
      },
      "jsEngine": "hermes",
      "buildNumber": "3"
    },
    "userInterfaceStyle": "automatic",
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4149b0"
      },
      "splash": {
        "image": "./assets/splash-android.png",
        "resizeMode": "contain"
      },
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.ledget.mobile",
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "minSdkVersion": 23,
            "buildToolsVersion": "34.0.0",
            "kotlinVersion": "1.6.20"
          }
        }
      ],
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
        }
      ],
      [
        "./plugins/withAndroidNetworkSecurity.js"
      ],
      [
        "./plugins/withAndroidPlaid.js"
      ],
      [
        "./plugins/withIOSPlaid.js"
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/SourceSans3Bold.ttf",
            "./assets/fonts/SourceSans3Regular.ttf",
            "./assets/fonts/SourceSans3Medium.ttf",
            "./assets/fonts/SourceSans3SemiBold.ttf"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "d83331f3-5801-4acb-9c4c-dba1e2311638"
      }
    }
  }
}
