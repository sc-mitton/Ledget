---
import { Image } from 'astro:assets';
import '../styles/walk-through.scss';
import '../styles/coins.scss';
import Phone from '../../public/phonebubble/phone-v45.svg';
import PhoneShadow from '../../public/phonebubble/phone-shadow-v2.svg';
import Dollar from '../../public/phonebubble/dollar-v2.png';
import DollarShadow from '../../public/phonebubble/dollar-shadow-v2.png';
---

<div id="product-walk-through" class="section">
  <script>
    import '../scripts/walk-through';
  </script>
  <div class="steps">
    <div class="steps--container">
      <div class="progress">
        <div class="progress--top-bar"></div>
        <div class="progress--top-bar-shadow"></div>
        <div class="progress--bottom-bar"></div>
        <div class="progress--bottom-bar-shadow"></div>
        <div class="progress--circle"></div>
        <div class="progress--circle"></div>
        <div class="progress--circle"></div>
      </div>
      <div class="steps--step">
        <h2>Set Your Categories</h2>
        <span> Add custom monthly and yearly spending categories.</span>
      </div>
      <div class="steps--step">
        <h2>Set Your Bills</h2>
        <span> Add monthly and yearly bills to never miss a payment.</span>
      </div>
      <div class="steps--step">
        <h2>Then Save!</h2>
        <span> Save money you didn't spend, or invest it!</span>
      </div>
    </div>
  </div>
  <div id="phone-container">
    <div id="emojis">
      {
        ['🍔', '🍾', '🍟', '🏡', '💐', '💅🏽', '💇🏽‍♀️', '💇🏻‍♂️', '🐕', '☕️', '💄'].map(
          (em, i) => (
            <span
              id={`emoji-${i}`}
              class={`emoji ${Math.random() > 0.5 ? 'green' : 'blue'} ${Math.random() > 0.5 ? 'float1' : 'float2'}`}
              style={{
                left: `${15 + Math.floor(Math.random() * 70) + 1}%`,
                zIndex: i,
              }}
            >
              <span>{em}</span>
            </span>
          ),
        )
      }
    </div>
    <div id="phone">
      <Image src={Phone} alt="Phone" id="phone--body" />
      <Image src={PhoneShadow} alt="Phone Shadow" id="phone--shadow" />
      <div class="dollar">
        <Image src={Dollar} alt="Dollar" />
        <Image src={DollarShadow} alt="Dollar Shadow" />
      </div>
      <div class="dollar">
        <Image src={Dollar} alt="Dollar" />
        <Image src={DollarShadow} alt="Dollar Shadow" />
      </div>
      <div class="dollar">
        <Image src={Dollar} alt="Dollar" />
        <Image src={DollarShadow} alt="Dollar Shadow" />
      </div>
    </div>
  </div>
</div>
