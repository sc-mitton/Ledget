option_settings:
  - namespace: aws:autoscaling:launchconfiguration
    option_name: InstanceType
    value: t2.micro
  # Toggle in and out for ability to ssh into the instances
  - namespace: aws:autoscaling:launchconfiguration
    option_name: EC2KeyName
    value: ledget-restapi
  - namespace: aws:autoscaling:launchconfiguration
    option_name: SecurityGroups
    value: sg-0e9134b06dc36c485, sg-06ef41e2e96af34d2
  - namespace: aws:autoscaling:launchconfiguration
    option_name: IamInstanceProfile
    value: aws-elasticbeanstalk-ec2-role
  - namespace: aws:ec2:vpc
    option_name: VPCId
    value: vpc-041408005a5077dc6
  - namespace: aws:ec2:vpc
    option_name: AssociatePublicIpAddress
    value: "true"
  - namespace: aws:ec2:vpc
    option_name: Subnets
    value: subnet-0f2a1c3a6904b83ba, subnet-01344bafce0b61d8f
    # subnet-0c2fd1584b2d52e05 don't include this subnet until we're off of the rds free tier
container_commands:
  01_create_log_folders:
    command: |
      mkdir -p /var/app/staging/logs &&
      touch /var/app/staging/logs/ledget_logs && chmod 666 /var/app/staging/logs/ledget_logs &&
      touch /var/app/staging/logs/gunicorn_logs && chmod 666 /var/app/staging/logs/gunicorn_logs &&
      touch /var/app/staging/logs/stripe_logs && chmod 666 /var/app/staging/logs/stripe_logs
  02_migrate:
    command: "/var/app/venv/staging-LQM1lest/bin/python3 /var/app/staging/manage.py migrate"
    leader_only: true
Resources:
  AWSEBSecurityGroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupName: eb-restapi
      GroupDescription: Security group for the EB environment
      SecurityGroupEgress:
        - Description: Allow all vpc traffic out
          CidrIp: 10.192.0.0/16
          IpProtocol: tcp
          FromPort: 443
          ToPort: 443
      SecurityGroupIngress:
        - Description: Allow ssh traffic from the jumpserver
          SourceSecurityGroupId: sg-0fae96ff7eb2f1809
          IpProtocol: tcp
          FromPort: 22
          ToPort: 22
        - Description: Allow all vpc traffic in
          CidrIp: 10.192.0.0/16
          IpProtocol: tcp
          FromPort: 443
          ToPort: 443
        - Description: Allow traffic from the LB
          SourceSecurityGroupId: sg-00e394b10eecf2c5c
          IpProtocol: tcp
          FromPort: 443
          ToPort: 443
      VpcId: vpc-041408005a5077dc6
